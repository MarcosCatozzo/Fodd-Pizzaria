<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="pizzaria" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Pizzaria"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="Produto.dialect" value="org.Produto.dialect.MySQLDialect"/>
            <property name="Produto.show_sql" value="true"/>
            <property name="Produto.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>